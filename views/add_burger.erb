<h1>ADD BURGER</h1>

<div class="form-container">

  <form action="/burger_conf" method="post">

    <div class="field">
      <label for="name">Name: </label>
      <input type="text" name="name" value="">
    </div>

    <div class="field">
      <label for="eatery_id">Eatery: </label>
      <select name="eatery_id" id="eatery_id">
        <% @eateries.each do |eatery| %>
          <option value="<%= eatery.id %>"> <%=eatery.name%> </option>
        <% end %>
      </select>
    </div>

    <div class="field">
      <label for="price">Price: </label>
      <input type="number" name="price" value="">
    </div>

    <div class="submit">
      <input type="submit" name="submit" value="CREATE">
    </div>

    </div>

  </form>
</div>
