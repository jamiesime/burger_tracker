<h1> <%= @day %> </h1>


<div class="table-container">
<table>
  <tr>
    <div class="tcell">
      <th>Burger</th>
    </div>
    <div class="tcell">
      <th>Price</th>
    </div>
    <div class="tcell">
      <th>Eatery</th>
    </div>
    <div class="tcell">
      <th>Deal</th>
    </div>
  </tr>
  <% for match in @matches %>
    <% if @day == match.fetch_day() %>
    <tr>
      <div class="tcell">
        <td><%= match.fetch_burger() %> </td>
      </div>
      <div class="tcell">
        <td><%= match.fetch_price() %> </td>
      </div>
      <div class="tcell">
        <td><%= match.fetch_eatery() %> </td>
      </div>
      <div class="tcell">
        <td><%= match.fetch_deal() %> </td>
      </div>
      <% end %>
    <% end %>
  </tr>
</table>
</div>
